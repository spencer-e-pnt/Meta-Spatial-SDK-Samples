<?xml version="1.0" encoding="utf-8" ?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
>

    <!-- View that displays the current status of the object detection and camera scanning. -->

    <LinearLayout
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:gravity="center"
    android:orientation="horizontal"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
  >

        <ImageView
      android:layout_width="6dp"
      android:layout_height="6dp"
      android:layout_marginBottom="2dp"
      android:contentDescription="@string/dot"
      android:src="@drawable/status_ellipse_3x"
    />

        <Space android:layout_width="3dp" android:layout_height="0dp" />

        <TextView
      android:id="@+id/camera_status"
      android:layout_width="wrap_content"
      android:layout_height="20sp"
      android:fontFamily="@font/inter_regular"
      android:lineHeight="16sp"
      android:shadowColor="@android:color/black"
      android:shadowRadius="4"
      android:text="@string/camera_status_off"
      android:textColor="@android:color/white"
      android:textSize="11sp"
    />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
